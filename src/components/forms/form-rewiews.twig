<div class="form-rewiews">
    <div class="form-rewiews-wrap">


        <div class="title-middle">
            Оставьте свой отзыв
        </div>

        <div class="form-rewiews-form">
            <form action="">
                <div class="form-rewiews-form-top">
                    <div class="item">
                        <label for="">Ваше имя</label>
                        <input type="text" id="name" placeholder="Например, Александр">
                    </div>
                    <div class="item">
                        <label for="">Электронная почта</label>
                        <input type="email" id="mail" placeholder="example@gmail.com">
                    </div>
                </div>
                <div class="form-rewiews-form-middle">
                    <div class="item">
                        <label for="comment">Ваш отзыв</label>
                        <textarea name="comment" id="comment">Напишите свой отзыв...</textarea>
                    </div>
                </div>
                <div class="form-rewiews-form-stars">
                    <div>Ваша оценка: 55555</div>
                </div>
                <div class="form-rewiews-form-bottom">
                    <div class="item">
                        <input class="btn-standart" type="submit" value="ОТПРАВИТЬ">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
